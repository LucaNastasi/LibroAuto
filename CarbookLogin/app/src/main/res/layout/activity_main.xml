<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/linearLayout">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_2"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="100dp" />


    <TextView
        android:id="@+id/carbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CarBook"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Inserisci e-mail"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci password"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword"



        />


    <TextView
        android:id="@+id/passwordDimenticata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        android:text="Password dimenticata?"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/accedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accedi"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#169; 2020 - 2021"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"


        />



    <ListView
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
android:layout_marginTop="175dp"
        />

    <TextView
        android:id="@+id/registrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
android:linksClickable="true"
        android:text="Non hai un account? Registrati"
        android:layout_marginTop="10dp"
        />


</LinearLayout>